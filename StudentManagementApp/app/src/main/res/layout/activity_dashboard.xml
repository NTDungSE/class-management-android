<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="24dp">

    <!-- Common components for both roles -->
    <TextView
        android:id="@+id/tv_welcome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Welcome"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@color/purple_500"
        android:layout_marginTop="24dp"/>

    <!-- Student-specific information -->
    <TextView
        android:id="@+id/tv_student_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:text="Student Info Loading..."
        android:textColor="@color/black"
        android:textSize="18sp"
        android:visibility="gone" />

    <!-- Student-specific layout -->
    <LinearLayout
        android:id="@+id/student_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <!-- Student buttons layout 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_my_assignments"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_marginEnd="12dp"
                android:layout_weight="1"
                android:backgroundTint="@color/purple_200"
                android:text="Assignments"
                android:textAllCaps="false"
                android:textColor="@color/black" />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_join_class"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_marginStart="12dp"
                android:layout_weight="1"
                android:backgroundTint="@color/purple_200"
                android:text="My Classes"
                android:textAllCaps="false"
                android:textColor="@color/black" />
        </LinearLayout>

        <!-- Student buttons layout 2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_my_grades"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_marginEnd="12dp"
                android:layout_weight="1"
                android:backgroundTint="@color/purple_200"
                android:text="Grades"
                android:textAllCaps="false"
                android:textColor="@color/black" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_my_profile"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_marginStart="12dp"
                android:layout_weight="1"
                android:backgroundTint="@color/purple_200"
                android:text="Profile"
                android:textAllCaps="false"
                android:textColor="@color/black" />
        </LinearLayout>
    </LinearLayout>

    <!-- Teacher-specific layout -->
    <LinearLayout
        android:id="@+id/teacher_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <!-- Teacher buttons layout 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_manage_students"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_marginEnd="12dp"
                android:layout_weight="1"
                android:backgroundTint="@color/purple_200"
                android:text="Manage Students"
                android:textAllCaps="false"
                android:textColor="@color/black" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_manage_classes"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_marginEnd="12dp"
                android:layout_weight="1"
                android:backgroundTint="@color/purple_200"
                android:text="Manage Classes"
                android:textAllCaps="false"
                android:textColor="@color/black" />
        </LinearLayout>

        <!-- Teacher buttons layout 2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_manage_assignments"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_marginEnd="12dp"
                android:layout_weight="1"
                android:backgroundTint="@color/purple_200"
                android:text="Manage Assignments"
                android:textAllCaps="false"
                android:textColor="@color/black" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_review_submissions"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_marginEnd="12dp"
                android:layout_weight="1"
                android:backgroundTint="@color/purple_200"
                android:text="Review Submissions"
                android:textAllCaps="false"
                android:textColor="@color/black" />
        </LinearLayout>
    </LinearLayout>

    <!-- Common logout button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/logout"
        app:cornerRadius="8dp"
        android:backgroundTint="@color/grey_500"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:padding="16dp"
        android:layout_marginTop="32dp"/>

</LinearLayout>